/* GLOBALE STYLES */
* {
	margin: 0;
	padding: 0;
	outline: none;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
html,
body {
	width: 100%;
	height: 100%;
}

body {
	font-family: 'Cabin', sans-serif;
	font-size: 20px;
	line-height: 32px;

}
.row {
	width: 100%;
	max-width: 60em;
	margin: 0 auto;
}
header,
main,
footer {
	width: 100%;
	min-height: 100vh;
}

/* FONT AND PARAGRAPH STYLES */
p {
	margin-bottom: 1rem;
}
strong {
	font-weight: bold;
}

/* HEADLINE STYLES */

h1, h2, h3, h4, h5, h6 {
	font-family: 'Exo', sans-serif;
}
h2 {
	font-size: 40px;
	margin-bottom: 50px;
	border-bottom: 1px solid rgba(0,0,0, .2);
	padding-bottom: 40px;
	display: block;

}
h3 {
	font-size: 30px;
	margin: 80px 0 20px;
	display: block;
}

header h1 {
	font-size: 7vw;
	display: block;
	line-height: 7vw;
}
header h2 {
	font-size: 4vw;
	line-height: 4vw;
	display: block;
	border-bottom: none;
}

/* IMAGE STYLES */
img.responsive {
	width: 100%;
	height: auto;
}

/* NAVIGATION STYLES */
nav {
	width: 100%;
	height: 80px;
	background: rgba(255,255,255, .3);
	position: fixed;
	top: 0;
	left: 0;
	z-index: 1;
}

/* HEADER STYLES */
header {
	background: url('../img/header.jpg') no-repeat center;
	-webkit-background-size: cover;
	background-size: cover;
	color: white;
	position: relative;
}
header:before {
	content: '';
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	background: black;
	opacity: .3;
}
header:after {
	content: 'Please scroll down';
	position: absolute;
	width: 100%;
	bottom: 90px;
	text-align: center;
	color: white;
}
.headline-group {
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
}
header h1 {
	font-size: 7vw;
	display: block;
	line-height: 7vw;
}
header h2 {
	font-size: 4vw;
	line-height: 4vw;
	display: block;
}

/* CONTENT STYLES */
main {
	padding: 90px 0;
}

/* FOOTER STYLES */
footer {
	background: #2e2e2e;
}